<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fullscreenvideocreator">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/fullscreenvideomaker"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@drawable/fullscreenvideomaker"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.appstationua.videocreator.Activities.ActivityRawMusic" />
        <activity android:name="com.appstationua.videocreator.Activities.ActivityMyVideo" />
        <activity android:name="com.appstationua.videocreator.Activities.ActivityVideoPreview" />
        <activity android:name="com.appstationua.videocreator.Activities.ActivityImageEditor" />
        <activity android:name="com.appstationua.videocreator.Activities.ActivityFont" />
        <activity android:name="com.appstationua.videocreator.Activities.ActivityAboutUs" />
        <activity android:name="com.appstationua.videocreator.WaveSong.MusicListActivity" />
        <activity
            android:name="com.appstationua.videocreator.activityAnim.AnimActivity"
            android:hardwareAccelerated="true"
            android:label="@string/app_name" />
        <activity android:name="com.appstationua.videocreator.Activities.DemoActivity" />
        <activity android:name="com.appstationua.videocreator.Activities.ActivityListSelectedPhotos" />
        <activity android:name="com.appstationua.videocreator.Activities.ActivitySelectImages" />
        <activity android:name="com.appstationua.videocreator.Activities.ActivityLoading" />
        <activity android:name="com.appstationua.videocreator.Activities.ActivityHome" />
        <activity android:name="com.appstationua.videocreator.Activities.ActivitySplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.appstationua.videocreator.MainActivity" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/admob_app_id" />
    </application>

</manifest>